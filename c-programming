void findMinMaxInArray() {
    int inputArray[500];
    int elementCount, counter, counterMin, counterMax;
    int minElement, minElementPosition;
    int  maxElement, maxElementPosition;


    printf("Enter number of elements in array: ");
    scanf("%d", &elementCount);

    printf("Enter %d numbers \n", elementCount);
    for(counter = 0; counter < elementCount; counter++){
        scanf("%d", &inputArray[counter]);
    }


    //assume that first element(inputArray[0]) is the minimum element
    minElement = inputArray[0];
    minElementPosition = 0;


    //Compare each element of input array with minElement, and
    //if it is less than minElement update minElement

     for(counterMin = 1; counterMin < elementCount; counterMin++){
        if(inputArray[counterMin] < minElement){
            minElement = inputArray[counterMin];
            minElementPosition = counterMin;
        }
    }
    // Print Minimum element and it's position in array
     printf("Minimum element in array is %d at index %d \n", minElement, minElementPosition);


     //similar to maxElament
    maxElement = inputArray[0];
    maxElementPosition = 0;

     for(counterMax = 1; counterMax < elementCount; counterMax++){
        if(inputArray[counterMax] > maxElement){
            maxElement = inputArray[counterMax];
            maxElementPosition = counterMax;
        }
    }
    // Print Minimum element and it's position in array
     printf("Maximum element in array is %d at index %d \n", maxElement, maxElementPosition);

    getch();
}
